---
import { leeItems } from "../lib/ec";

let global = await leeItems("global");
---

<div class="caixa max-w-none mt-60">
  <div
    class="flex flex-col lg:flex-row gap-20 border-t-4 border-black py-20 text-center lg:text-left"
  >
    <!-- Logo -->
    <div>
      <img
        class="max-w-xs mx-auto lg:mx-0"
        src="/logo_arua_concello.webp"
        alt=""
      />
    </div>
    <!-- Peine -->
    <div class="flex-1">
      <div>
        {
          global.creditos.map((c, i) => {
            return (
              <div>
                {c.etiqueta}
                <a href={c.url} class="text-red-500">
                  {c.texto}
                </a>
                <br />
              </div>
            );
          })
        }
      </div>
      <ul class="flex justify-center lg:justify-normal gap-6 mt-12">
        <li>
          <a href="/legal" class="underline underline-offset-4">Aviso legal</a>
        </li>
        <li>
          <a href="/politica-privacidade" class="underline underline-offset-4"
            >Pol√≠tica de privacidade</a
          >
        </li>
      </ul>
    </div>
    <!-- Ir arriba -->
    <div>
      <button x-data @click="window.scrollTo({top: 0, behavior: 'smooth'})">
        <svg
          class="fill-none stroke-[2.5px] stroke-current size-10"
          viewBox="0 0 24 24"
        >
          <path d="M8 6L12 2L16 6"> </path><path d="M12 2V22"></path>
        </svg>
      </button>
    </div>
  </div>
</div>
